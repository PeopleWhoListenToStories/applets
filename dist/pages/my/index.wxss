.userinfo-img-view {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1PX solid #60056c;
  background: #fff;
}
.userinfo-img-view .userinfo-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.container {
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  position: relative;
}
.nav {
  width: 100%;
  height: 170rpx;
  display: grid;
  grid-template-columns: 35% 65%;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 0 20rpx;
  background: #e7e7e7;
}
.nav .photo {
  width: 150rpx;
  height: 150rpx;
  padding: 10rpx 50rpx;
}
.nav .info {
  color: #ebc868;
}
.content {
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.content .lebalItem {
  display: inline-block;
  width: 100%;
  height: 90rpx;
  font-size: 33rpx;
  line-height: 90rpx;
  text-align: center;
}
.content .lebalItem:active {
  background: rgba(0, 0, 0, 0.5);
}
.play {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
}

