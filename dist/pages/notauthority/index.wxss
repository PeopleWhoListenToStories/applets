@charset "UTF-8";
.logo {
  width: 80%;
  height: 100rpx;
  margin: 300rpx auto;
  overflow: hidden;
}
.login {
  width: 200rpx;
  height: 100rpx;
  margin: 0 auto;
}
.login:hover {
  content: '点我登陆';
}
.bottom {
  width: 100%;
  position: absolute;
  bottom: 7%;
  left: 0;
}
.form-login {
  width: 100%;
  height: auto;
}
.form-login .example-body {
  width: 70%;
  height: 50rpx;
  margin: 20rpx auto;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-around;
      -ms-flex-pack: distribute;
          justify-content: space-around;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.form-login .phone {
  width: 74%;
  border: 1rpx solid skyblue;
  border-radius: 5rpx;
}
.form-login .code {
  width: 30%;
  border: 1rpx solid skyblue;
  border-radius: 5rpx;
  color: #ccc;
}
.form-login .code-btn {
  font-size: 23rpx;
}
.btn {
  width: auto;
  height: 70rpx;
  text-align: center;
  background: cornflowerblue;
  color: white;
  border-radius: 6rpx;
  padding: 2rpx 50rpx;
  line-height: 2;
  margin-top: 50rpx;
}

